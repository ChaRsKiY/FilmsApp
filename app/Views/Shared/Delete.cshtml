@model Movie

<h2>Delete Movie</h2>

<h3>Are you sure you want to delete this movie?</h3>
<div class="deleteaccept">
    <h4>Movie:</h4>
    <h5>@Model.Title</h5>
    <div>
        @Model.Description
    </div>
    <div class="deleteacceptform">
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="backtolist" asp-controller="Home" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
